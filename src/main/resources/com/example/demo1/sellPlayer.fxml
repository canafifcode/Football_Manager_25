        <Label fx:id="balanceLabel" alignment="CENTER" layoutX="14.0" layoutY="336.0" prefHeight="50.0" prefWidth="138.0" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Impact" size="21.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
