<AnchorPane fx:id="playerContainer" prefHeight="600.0" prefWidth="1215.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.SellPlayerController">
    <children>
        <ImageView fitHeight="615.0" fitWidth="1215.0" layoutX="-2.0" layoutY="-5.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@buysellbg.jpg" />
            </image>
        </ImageView>
        <Label layoutX="512.0" layoutY="-23.0" prefHeight="118.0" prefWidth="206.0" text="My Players" textAlignment="CENTER" textFill="#ff3b3b">
            <font>
                <Font name="Fira Code Retina" size="30.0" />
            </font>
        </Label>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" layoutX="306.0" layoutY="100.0" prefHeight="424.0" prefWidth="600.0" stylesheets="@transparent-scrollpane.css" vbarPolicy="AS_NEEDED">
