            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <ImageView fx:id="playerView" fitHeight="97.0" fitWidth="91.0" layoutX="433.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true" />
    </children>
</AnchorPane>
